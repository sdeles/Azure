apiVersion: apps/v1
kind: Deployment
metadata:
  name: jarleychat-deployment
  labels:
    app: jarleychat
spec:
  replicas: 10
  selector:
    matchLabels:
      app: jarleychat
  template:
    metadata:
      labels:
        app: jarleychat
    spec:
      containers:
      - name: jarleychat-container
        image: sdeles/jarleychat:latest
        ports:
        - containerPort: 8080
---
apiVersion: v1
kind: Service
metadata:
  name: jarleychat-service
spec:
  selector:
    app: jarleychat
  ports:
    - protocol: TCP
      port: 80
      targetPort: 8080
  type: ClusterIP
